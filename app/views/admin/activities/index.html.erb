<% title "#{t 'models.activities'}" %>

<table>
  <tr>
    <th><%= t 'attributes.activity.task' %></th>
    <th><%= t 'attributes.activity.day' %></th>
    <th><%= t 'attributes.activity.hours' %></th>
    <th><%= t 'attributes.activity.description' %></th>
  </tr>
  <% for activity in @activities %>
    <tr>
      <td><%=link_to(h(activity.task.try(:code)), activity.task) if activity.task %></td>
      <td><%=h activity.day %></td>
      <td><%=h activity.hours %></td>
      <td><%=h activity.description %></td>
      <td><%= link_to t(:show), [:admin, activity] %></td>
      <td><%= link_to t(:edit), edit_admin_activity_path(activity) %></td>
      <td><%= link_to t(:destroy), [:admin, activity], :confirm => t(:sure?), :method => :delete %></td>
    </tr>
  <% end %>
</table>


<p><%= link_to "#{t :new} #{t 'models.activity'}", new_admin_activity_path %></p>

