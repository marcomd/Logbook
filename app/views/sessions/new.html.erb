<% title t("devise.sessions.link") %>  

<% semantic_form_for resource_name, resource, :url => session_path(resource_name) do |f| -%>
  <% f.inputs do %>
    <li><%= f.label :email %> <%= f.text_field :email %></li>
    <li><%= f.label :password %> <%= f.password_field :password %></li>
    <% if devise_mapping.rememberable? -%>
    <li><%= f.check_box :remember_me %> <%= f.label :remember_me %></li>
    <% end -%>
    <li><%= f.submit t("devise.sessions.link") %></li>
  <% end -%>
<% end -%>

<%= render :partial => "shared/devise_links" %>