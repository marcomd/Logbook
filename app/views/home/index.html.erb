<%= show_calendar :month => @month, :year => @year, :highlight_today => true %>

<div class="home blog">
  <div class="icon"></div>
  <div class="posts">
    <p class="title"><%= t 'sentences.recent_activities' %></p>
  <% @activities.each do |activity| %>
    <div class="blog activity">
      <p class="title"><%= link_to(toname(activity.user.try(:email)), activity.user, {:class => 'lightview', :rel => 'ajax', :title => "#{toname activity.user.try(:email)} :: :: ajax: { method: 'get' }, width: 800, height: 500"}) %> - <%= l activity.created_at, :format => '%A %d %B %Y, %H:%M' %></p>
      <p class="subtitle"><%= activity.task.project.try(:name) if activity.task && activity.task.project %></p>
      <p><%= h activity.description %></p>
    </div>
  <% end %>
  </div>
</div>
<div class="clear"></div>